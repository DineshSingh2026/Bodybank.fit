SMTP_USER=yourgmail@gmail.com
SMTP_PASS=your_gmail_app_password
MAIL_FROM=yourgmail@gmail.com Copy this file to .env and fill in your values.
# Get a Google OAuth Client ID: https://console.cloud.google.com/apis/credentials

# Google Sign-In (required for "Continue with Google")
GOOGLE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com

# Server
# PORT=3000
# NODE_ENV=development

# Database (optional; default: data/bodybank.db inside app)
